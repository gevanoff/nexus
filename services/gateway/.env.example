# Gateway service configuration
# This file contains default configuration for the gateway service

# Service identification
SERVICE_NAME=gateway
SERVICE_VERSION=1.0.0

# Server configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8800
GATEWAY_BEARER_TOKEN=change-me-in-production

# Observability
OBSERVABILITY_HOST=0.0.0.0
OBSERVABILITY_PORT=8801

# Upstream services
OLLAMA_BASE_URL=http://ollama:11434

# Routing
DEFAULT_BACKEND=ollama
ROUTER_ENABLE_POLICY=true

# Data paths
MEMORY_DB_PATH=/data/memory.sqlite
USER_DB_PATH=/data/users.sqlite

# Features
MEMORY_V2_ENABLED=true
METRICS_ENABLED=true
